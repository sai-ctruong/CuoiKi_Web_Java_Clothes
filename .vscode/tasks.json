{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Maven: Clean",
            "type": "shell",
            "command": "mvn clean",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Maven: Compile",
            "type": "shell",
            "command": "mvn compile",
            "group": "build",
            "problemMatcher": ["$maven"]
        },
        {
            "label": "Maven: Package",
            "type": "shell",
            "command": "mvn package",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$maven"]
        },
        {
            "label": "Maven: Clean & Package",
            "type": "shell",
            "command": "mvn clean package",
            "group": "build",
            "problemMatcher": ["$maven"]
        },
        {
            "label": "Run on Tomcat (Embedded)",
            "type": "shell",
            "command": "mvn cargo:run",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": ".",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "\\[INFO\\] Building war:",
                    "endsPattern": "\\[INFO\\] Press Ctrl\\+C to stop the container\\.\\.\\."
                }
            },
            "dependsOn": "Maven: Package"
        },
        {
            "label": "Stop Tomcat",
            "type": "shell",
            "command": "mvn cargo:stop",
            "problemMatcher": []
        },
        {
            "label": "Maven: Install",
            "type": "shell",
            "command": "mvn install",
            "group": "build",
            "problemMatcher": ["$maven"]
        }
    ]
}
